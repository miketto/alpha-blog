<%if @article.errors.any?%>
<h2>Wystąpiły następujące błędy zapisu</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>


<%= form_for @article do |t|%>
	<p>
		<%= t.label :title %><br />
		<%= t.text_field :title %>
	</p>
	
	<p>
		<%= t.label :description %><br />
		<%= t.text_area :description %>
	</p>
	<p>
		<%= t.submit "Dodaj"%>
	</p>

<% end %>
<%= link_to "pokaż listę artykułów", articles_path %>